{% block main %}
    <!-- Div d'affichage de la carte google -->
    <div id="map" data-projects="{{ projects|serialize(format = 'json') }}"></div>

    <section class="main_article">
    
        {% if projects|length == 0 %}
            <div class="text-center">
                <p>Aucun projet pour le moment.</p>
            </div>
        {% endif %}

        {% for project in projects %}
            
            <article class="main_article_container">
                <div class="main_article_flex_item_left">
                    {% if project.image %}
                        <img src="{{ vich_uploader_asset(project, 'imageFile') }}" alt="{{ project.title }}">
                    {% else %}
                        <img src="{{ asset('img/no-image.png') }}" alt="{{ project.title }}">
                    {% endif %}
                </div>
                <div class="main_article_item_right_flex_container">
                    <div class="main_article_flex_container">
                        <h2 class='main_article_flex_content_h2'>{{project.title}}</h2>
                        <img src={{ asset('img/icon_nofavori.png') }} alt="">
                    </div>
                    <div class='main_article_item_right_flex_content_div'>
                        <p>{{project.address}}</p>
                        <p>Projet Ã  venir (10 juin 2024)</p>
                    </div>
                    <p class='main_article_item_right_flex_content_p'>{{project.content}}
                    </p>
                </div>
            </article>

            <hr>

        {% endfor %}

    </section>
    
{% endblock %}