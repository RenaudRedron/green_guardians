{% extends 'themes/base_admin.html.twig' %}

{% block title %}Ajout d'une catégorie{% endblock %}

{% block description %}Ajout d'une catégorie de Green Guardians{% endblock %}

{% block keywords %}Admin, Administration, Catégories{% endblock %}

{% block main %}

    <h2 class="text-center m-5">Ajout d'une catégorie</h2>
    <div class="container">

        {{ form_start(formCategory) }}

            <div class="mb-3">
                <label for="category_form_name">Nom de catégorie<strong class="text-danger">*</strong></label>
                <div class="text-danger">{{ form_errors(formCategory.name) }}</div>
                {{ form_widget(formCategory.name, {"attr": {"class":"form-control", "autofocus":"autofocus"}})}}
            </div>

            <div class="mb-3">
                <label for="category_form_imageFile_file">Image</label>
                <div class="text-danger">{{ form_errors(formCategory.imageFile) }}</div>
                {{ form_widget(formCategory.imageFile, {"attr": {"class":"form-control"}}) }}
            </div>

            <div class="mb-3">
                <label for="category_form_description">Description</label>
                <div class="text-danger">{{ form_errors(formCategory.description) }}</div>
                {{ form_widget(formCategory.description, {"attr": {"class":"form-control"}})}}
            </div>

            <div class="mb-3">
                <input formnovalidate type="submit" class="btn btn-success shadow w-100" value="Ajouter la catégorie">
            </div> 

        {{ form_end(formCategory) }}

    </div>


{% endblock %} 