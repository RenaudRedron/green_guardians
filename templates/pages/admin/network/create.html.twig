{% extends 'themes/base_admin.html.twig' %}

{% block title %}Ajout d'un réseau social{% endblock %}

{% block description %}Ajout d'un réseau social Green Guardians{% endblock %}

{% block keywords %}Admin, Administration, Réseau, Social, Network{% endblock %}

{% block main %}

    <h2 class="text-center m-5">Ajout d'un réseau</h2>
    <div class="container">

        {{ form_start(form) }}

            <div class="mb-3">
                <label for="network_form_url">URL<strong class="text-danger">*</strong></label>
                <div class="text-danger">{{ form_errors(form.url) }}</div>
                {{ form_widget(form.url, {"attr": {"class":"form-control", "autofocus":"autofocus"}})}}
            </div>

            <div class="mb-3">
                <label for="network_form_imageFile_file">Icone</label>
                <div class="text-danger">{{ form_errors(form.imageFile) }}</div>
                {{ form_widget(form.imageFile, {"attr": {"class":"form-control"}}) }}
            </div>

            <div class="mb-3">
                <input formnovalidate type="submit" class="btn btn-success shadow w-100" value="Ajouter le réseau">
            </div> 

        {{ form_end(form) }}

    </div>


{% endblock %} 