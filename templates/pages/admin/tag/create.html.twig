{% extends 'themes/base_admin.html.twig' %}

{% block title %}Ajout d'un tag{% endblock %}

{% block description %}Ajout d'un tag de Green Guardians{% endblock %}

{% block keywords %}Admin, Administration, Tags{% endblock %}

{% block main %}

    <h2 class="text-center m-5">Ajout d'un tag</h2>
    <div class="container">

        {{ form_start(formTag) }}

            <div class="mb-3">
                <label for="">Nom du tag<strong class="text-danger">*</strong></label>
                <div class="text-danger">{{ form_errors(formTag.name) }}</div>
                {{ form_widget(formTag.name, {"attr": {"class":"form-control", "autofocus":"autofocus"}})}}
            </div>

            <div class="mb-3">
                <input formnovalidate type="submit" class="btn btn-success shadow w-100" value="Ajouter le tag">
            </div> 

        {{ form_end(formTag) }}

    </div>


{% endblock %} 