{% extends 'themes/base_admin.html.twig' %}

{% block title %}Panneau d'administration{% endblock %}

{% block description %}Panneau d'administration de Green Guardians{% endblock %}

{% block keywords %}Admin, Administration{% endblock %}

{% block main %}
        
        <h2 class="text-center m-5">Panneau d'administration</h2>

        <div class="text-center m-3">
            Bonjour, Administrateur !
        </div>

        <div class="container">
            <div class="row d-flex justify-content-center">
            
                <div class="col-md-4 col-lg-3 bg-dark text-white text-center p-3 m-3">
                    <h3>Utilisateurs</h3>
                    <p class="p-3 fs-3">{{ users|length }}</p>
                </div>

                <div class="col-md-4 col-lg-3 bg-dark text-white text-center p-3 m-3">
                    <h3>Cat√©gories</h3>
                    <p class="p-3 fs-3">{{ categories|length }}</p>
                </div>

                <div class="col-md-4 col-lg-3 bg-dark text-white text-center p-3 m-3">
                    <h3>Tags</h3>
                    <p class="p-3 fs-3">{{ tags|length }}</p>
                </div>

                <div class="col-md-4 col-lg-3 bg-dark text-white text-center p-3 m-3">
                    <h3>Projets</h3>
                    <p class="p-3 fs-3">{{ projects|length }}</p>
                </div>

                <div class="col-md-4 col-lg-3 bg-dark text-white text-center p-3 m-3">
                    <h3>Commentaires</h3>
                    <p class="p-3 fs-3">{{ comments|length }}</p>
                </div>

                <div class="col-md-4 col-lg-3 bg-dark text-white text-center p-3 m-3">
                    <h3>Signalements</h3>
                    <p class="p-3 fs-3">{{ reporting|length }}</p>
                </div>
            
            </div>
        </div>
        
{% endblock %} 